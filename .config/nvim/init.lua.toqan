                vim.keymap.set('i', '<Esc>', '<Esc>', { buffer = bufnr, noremap = true, silent = true })

                local opts = { noremap = true, silent = true, buffer = bufnr }
                vim.keymap.set('n', 'gD', vim.lsp.buf.declaration, opts)
